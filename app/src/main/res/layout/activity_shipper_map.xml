<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:weightSum="10"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:navigationIcon="?attr/homeAsUpIndicator"/>
    <fragment
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context=".views.activities.TrackingOrderActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment">
    </fragment>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingTop="18dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="22dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_name_restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cửa hàng A"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_access_time"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_duration"
                        android:textSize="13sp"
                        android:text="12 phut"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_km"
                        android:textSize="13sp"
                        android:text="3km"/>
                </LinearLayout>



                <TextView
                    android:id="@+id/txt_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#a5a5a5"
                    android:text="0399458496"
                    android:textSize="13sp"
                    android:layout_marginTop="3dp"/>


                <TextView
                    android:id="@+id/txt_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.3sp"
                    android:text="0"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="40dp">

                        <ImageView
                            android:id="@+id/image_contact"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/ic_phone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gọi"
                            android:layout_marginTop="4dp"
                            android:textColor="#a5a5a5"
                            android:textSize="10sp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/btn_completed"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:paddingRight="100dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="100dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/background_button_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoàn tất"/>
    </LinearLayout>

</RelativeLayout>
